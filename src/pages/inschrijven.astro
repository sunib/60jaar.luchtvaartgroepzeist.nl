---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Inschrijven from '~/components/widgets/Inschrijven.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Inschrijven',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Inschrijven" title="Laat ons je voorkeuren weten" />
  <Inschrijven
    id="form"
    title="Vul 'm vandaag nog in!"
    subtitle="Je kunt je voorkeuren later nog wijzigen: ook als je het nog niet weet horen we graag van je! Het helpt ons te weten welke activiteiten je interesse hebben. We kunnen je gerichter informeren."
    inputs={[
      {
        type: 'email',
        name: 'EMAIL',
        label: 'E-mail adres',
      },
      {
        type: 'text',
        name: 'FNAME',
        label: 'Voornaam',
      },
      {
        type: 'text',
        name: 'LNAME',
        label: 'Achternaam',
      },
      {
        type: 'text',
        name: 'MOBIEL',
        label: 'Mobiele nummer',
      },
      {
        type: 'radio',
        name: 'HERDENKING',
        label: 'Herdenking (4 mei)',
        radioOptions: [
          'Geen interesse',
          'Ik weet het nog niet, hou me op de hoogte',
          'Ik kom + eten om 17:00',
          'Ik kom',
        ],
      },
      {
        type: 'radio',
        name: 'WEDSTRIJD',
        label: 'Modelvliegwedstrijden XL (12 juli)',
        radioOptions: [
          'Geen interesse',
          'Ik weet het nog niet, hou me op de hoogte',
          'Ik kom kijken',
          'Ik doe mee met eigen vliegtuig',
          'Ik doe mee + ontvang graag een bouwpakket (10 euro)',
        ],
      },
      {
        type: 'radio',
        name: 'VLIEGSHOW',
        label: 'Vliegshow Sanicol (13 & 14 september)',
        radioOptions: ['Geen interesse', 'Ik weet het nog niet, hou me op de hoogte', 'Ik ga mee'],
      },
      {
        type: 'radio',
        name: 'REUNIE',
        label: 'ReÃ¼nie (4 oktober)',
        radioOptions: ['Geen interesse', 'Ik weet het nog niet, hou me op de hoogte', 'Ik kom'],
      },
    ]}
    button="Schrijf me in!"
    textarea={{
      name: 'OPMERKING',
      placeholder:
        'Optioneel: bv. je komt met meerdere gezinsleden, je zit met vragen of je wilt gewoon iets vertellen',
      label: 'Opmerkingen',
    }}
    description="We sturen direct een (automatische!) bevestiging op het opgegeven e-mail adres. Opmerkingen bekijken we zeker, maar dit kan iets meer tijd kosten."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to account management, website navigation, payment issues, accessing purchased templates or general questions about the website's functionality.`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, customization options, licensing for commercial use, inquiries about specific template, etc.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like template installation, problems editing difficulties, compatibility issues with software or download errors, or other technical challenges related to using the templates.',
      },
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
